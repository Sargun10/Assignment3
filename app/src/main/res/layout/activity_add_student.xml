<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityAddStudent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_alignParentTop="true"

        android:src="@mipmap/ic_launcher"

        />
    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="Name   :"
        android:padding="15dp"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextName"
        android:layout_toEndOf="@+id/textViewName"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="20dp"
        android:textSize="40dp"
        android:padding="15dp"
        android:layout_toRightOf="@+id/textViewName" />
    <TextView
        android:id="@+id/textViewRoll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewName"
        android:layout_marginTop="20dp"
        android:textSize="40dp"
        android:padding="15dp"
        android:text="Roll No :"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextRollNo"
        android:layout_toEndOf="@+id/textViewRoll"
        android:layout_below="@+id/editTextName"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:textSize="40dp"
        android:padding="15dp"
        android:layout_toRightOf="@+id/textViewRollNo" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSave"
        android:text="Save"
        android:layout_alignParentBottom="true"
        android:onClick="onClickSave"
        />





</RelativeLayout>